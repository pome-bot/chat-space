.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        %span<>
          = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-items__icon top-items__icons--edit" do
          = icon('far', 'edit', class: "top-items__icon--edit")
        = link_to edit_user_path(current_user), class: "top-items__icon top-items__icons--cog" do
          = icon('fas', 'cog', class: "top-items__icon--cog")
  .side-bar__group-list
    -# - @groups.each do |group|
    - current_user.groups.each do |group|
      .group
        = link_to "#", class: "group-a-tag" do
          .group__name
            %span<>
              = group.name
          .group__message
            %span<>
              メッセージはまだありません
